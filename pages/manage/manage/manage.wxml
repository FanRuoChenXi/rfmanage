<!-- 个人 -->
<view class="flex" style="margin:40rpx 68rpx;">
    <view class="flex-column" style="width:448rpx">
        <text class="N1 font32 bold" style="margin-bottom: 20rpx">欢迎回来</text>
        <text class="N1 font24">{{user['name']}}</text>
    </view>
    <t-avatar t-class-content="avtar" shape="round" size="72px">{{user['name'][0]}}</t-avatar>
</view>
<!-- 宫格 -->
<view style="margin-top: 40rpx;">
    <t-grid theme="card">
        <t-grid-item text="类别管理" icon="layers" bindclick="toAssetSearch" />
        <t-grid-item text="供应商" icon="tools" bindclick="toAssetSearch" />
        <t-grid-item text="资产查询" icon="search" bindclick="toAssetSearch" />
        <t-grid-item text="新增项目" icon="plus" bindclick="toItemUpload" />
        <t-grid-item text="资产审计" icon="download" bindclick="toAssetAudit" />
        <t-grid-item text="数据趋势" icon="chart-analytics" bindclick="toDataTrend" />
    </t-grid>
</view>
<!-- 底栏 -->
<tab-bar tabBarValue="manage" />